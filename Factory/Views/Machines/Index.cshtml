@{
  Layout = "_Layout";
}

@using Factory.Models;
<div class="min-h-screen py-6 flex flex-col justify-center sm:py-12 bg-gray-400 bg-opacity-95">
  <div class="relative py-3 max-w-screen mx-auto">
    <div class="object-center ">
      <table class="shadow-lg bg-gray-600 rounded-md transform hover:translate-x-2 hover:shadow-2xl">
                <tr class="bg-gray-800"><td class=" text-center px-8 py-4"> Manage Machines <i class='bx bxs-group'></i></td></tr>
        <tr>
          <th class="bg-gray-600 text-blue-300 border text-left px-8 py-4">Machine Name</th>
          <th class="bg-gray-600 text-blue-300 border text-left px-8 py-4">Machine</th>
          <th class="bg-gray-600 text-blue-300 border text-left px-8 py-4">Engineers assigned</th>
        </tr>
        <tr>
          <td class="border px-8 py-4 text-blue-300 animate-pulse"><a href='/Machines/Create'>Add a new Machine</a></td>
          <td class="border px-8 py-4"><i class="text-blue-300 bx bx-male"> = @Model.Count</i></td>
          <td class="border px-8 py-4"><i class="text-blue-300 bx bxs-factory"> = @ViewBag.EngineerTotal</i></td>
        </tr>

        @if (@Model.Count == 0)
        {
          <h3>No Machines added to database</h3>
        }

          @foreach(Machine machine in Model)
        {
          <tr>
            <td class="border px-8 py-4">@Html.ActionLink($"{machine.MachineName}", "Details", new { id =
            machine.MachineId })</td>
            <td class="border px-8 py-4">
              @if (machine.MachineId < 5) {
              @for (int i = 0; i < machine.MachineId; i++)
              { 
                <i class="text-purple-400 bx bxs-factory"></i>
              }
              }
              @if (machine.MachineId >= 5) {
                <i class="text-purple-400 bx bxs-factory"># @machine.MachineId</i>
              }
            </td>
            <td class="border px-8 py-4">
              @if (machine.JoinEntities.Count < 5) {
              @for (int i = 0; i < machine.JoinEntities.Count; i++)
              {
                <i class="text-green-400 bx bx-male"></i>
              }
              }
              @if (machine.JoinEntities.Count >= 5) {
                <i class="text-green-400 bx bx-male"># @machine.JoinEntities.Count</i>
              }
            </td>
          </tr>
        }
      </table>
    </div>
  </div>
</div>
